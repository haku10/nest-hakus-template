{
  // For markdown: GitHub同様、mdファイルは改行で見た目通り改行する
  "markdown.preview.breaks": true,

  // For js/ts
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "[json]": {
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  // package.jsonにコメントをつけるため、jsonc(コメント付きJSON)として扱う
  "files.associations": {
    "package.json": "jsonc"
  },

  // For prisma
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },

  // for todo tree
  "todo-tree.highlights.defaultHighlight": {
    "type": "whole-line",
    "foreground": "white",
    "background": "green",
    "opacity": 50,
},
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "BUG",
    "HACK",
    "NOTE",
    "WARNING",
    "ENHANCE"
  ],
  "todo-tree.regex.regex": "(//)\\s*($TAGS).*(\\n\\s*//\\s{2,}.*)*"
}
